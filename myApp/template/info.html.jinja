<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 11000">
  {% if infoRouge %}
  <div id="toastRouge" class="toast text-bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        {{ infoRouge }}
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Fermer"></button>
    </div>
  </div>
  {% endif %}

  {% if infoVert %}
  <div id="toastVert" class="toast text-bg-success" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        {{ infoVert }}
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Fermer"></button>
    </div>
  </div>
  {% endif %}

  {% if infoBleu %}
  <div id="toastBleu" class="toast text-bg-primary" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        {{ infoBleu }}
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Fermer"></button>
    </div>
  </div>
  {% endif %}
</div>

<script>
<!-- eslint-disable -->
//L'analyseur de VS code déclare des erreurs ici, il semblerait pourtant quelles ne sont que des faux positifs lié à l'extension JavaScript.
//Le code ne présente visiblement aucun soucis d'execution 
document.addEventListener('DOMContentLoaded', () => {
    const options = { delay: 4000 };
    {% if infoRouge %}
new bootstrap.Toast(document.getElementById('toastRouge'), options).show();
    {% endif %}
    {% if infoVert %}
new bootstrap.Toast(document.getElementById('toastVert'), options).show();
    {% endif %}
    {% if infoBleu %}
new bootstrap.Toast(document.getElementById('toastBleu'), options).show();
    {% endif %}
});
</script>

